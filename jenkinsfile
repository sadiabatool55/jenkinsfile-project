pipeline {
    agent any

    environment {
        IMAGE_NAME = "jenkins-docker-ci"
    }

    stages {

        stage('Checkout Code') {
            steps {
                git 'https://github.com/sadiabatool55/jenkinsfile-project.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t $IMAGE_NAME .'
            }
        }

        stage('Run Tests in Container') {
            steps {
                sh 'docker run --rm $IMAGE_NAME'
            }
        }
    }

    post {
        success {
            echo '✅ Tests passed inside Docker container!'
        }
        failure {
            echo '❌ Tests failed!'
        }
        always {
            sh 'docker system prune -f'
        }
    }
}

